<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.CoffeShops" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/verde_azul</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/rosa_oscuro</item>
        <item name="android:navigationBarColor">@color/verde_azul_oscuro</item>
    </style>

    <style name="Theme.CoffeShops" parent="Base.Theme.CoffeShops">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.CoffeShops.Toolbar" parent="Base.Theme.CoffeShops">
        <item name="android:background">@color/verde_azul</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
</resources>