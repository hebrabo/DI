<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar_layout"></include>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Elige una opciÃ³n:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <RadioGroup
        android:id="@+id/radioGroupGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/radioAngryBirds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angry Birds" />

        <RadioButton
            android:id="@+id/radioDragonFly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dragon fly" />

        <RadioButton
            android:id="@+id/radioHillClimbingRacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hill climbing racing" />

        <RadioButton
            android:id="@+id/radioPocketSoccer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pocket soccer" />

        <RadioButton
            android:id="@+id/radioRadiantDefense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radiant defense" />

    </RadioGroup>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupGames"
        android:numStars="7" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:backgroundTint="@color/colorSecondary"
        android:tint="@color/black"
        android:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:shapeAppearance="@style/Widget.Material3.CircularProgressIndicator.ExtraSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="?android:attr/textCheckMark" />
</androidx.constraintlayout.widget.ConstraintLayout>