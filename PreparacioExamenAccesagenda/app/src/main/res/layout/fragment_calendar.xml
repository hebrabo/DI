<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendarToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivMenuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black"
            android:contentDescription="Menu" />

        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AccesAgenda"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ivMenuIcon"
            app:layout_constraintEnd_toStartOf="@id/ivUserProfile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ivUserProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imageavatar"
                android:scaleType="centerCrop"
                android:contentDescription="User Avatar" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_tabs"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:tabMode="fixed"
        app:tabGravity="fill"

        app:tabIndicatorGravity="stretch"
        app:tabIndicator="@drawable/bg_tab_selected"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/light_gray_unselected"
        app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:tabRippleColor="@null"
        android:layout_marginBottom="16dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendario" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ­a" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semana" />

    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:id="@+id/btnQrScanner"
            android:layout_width="0dp"  android:layout_height="wrap_content"
            android:layout_weight="1"   android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bg_custom_button_selectable"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escaner QR"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/codigoqr"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnVoiceAssistant"
            android:layout_width="0dp"  android:layout_height="wrap_content"
            android:layout_weight="1"   android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bg_custom_button_selectable"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistente de Voz"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/grabar"
                android:scaleType="fitCenter"/>

        </LinearLayout>
    </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dateTextAppearance="@style/CalendarDateText"
        android:weekDayTextAppearance="@style/CalendarWeekDayText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

</LinearLayout>